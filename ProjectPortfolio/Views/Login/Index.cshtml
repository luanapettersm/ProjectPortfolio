@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="width: 100%; height: 75vh;">
    <div class="shadow p-3 bg-body rounded w-25" style="background-color: #FFFFFF !important">
        <h4 class="mb-3 d-flex justify-content-center">Login</h4>
        <form>
            <input class="form-control" id="userId" placeholder="Usuário">
            <input type="password" class="form-control" id="passwordId" placeholder="Senha">
        </form>
        <button type="button" class="btn btn-primary w-100 mt-3">Entrar</button>
    </div>
</div>
