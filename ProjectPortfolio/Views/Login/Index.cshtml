@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="width: 100%; height: 75vh;">
    <div class="shadow p-3 bg-body rounded w-25" style="background-color: #FFFFFF !important">
        <h4 class="mb-3 d-flex justify-content-center">Login</h4>
        <form id="loginFormId">
            <input class="form-control" id="userId" name="login.userName" placeholder="Usuário">
            <input type="password" class="form-control" id="passwordId" name="login.password" placeholder="Senha">
        </form>
        <button onclick="Login()" type="button" class="btn btn-primary w-100 mt-3">Entrar</button>
    </div>
</div>

<script src="~/js/Login/Index.js" asp-append-version="true"></script>
