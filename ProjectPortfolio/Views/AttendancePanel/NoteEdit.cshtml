@model IssueNoteModel;

<div id="noteEditModal" class="modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Projeto</h5>
            </div>
            <div class="modal-body">
                <form id="noteFormId">
                    @if (Model != null)
                    {
                        <input id="noteId" name="note.id" value="@Model.Id" hidden />
                    }
                    <div class="row">
                        <div class="col-12">
                            <input class="form-control" id="descriptionId" name="note.description" placeholder="Descrição" value="@(Model != null ? Model.Description : "")">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button onclick="CloseNoteEdit()" type="button" class="btn btn-primary">Fechar</button>
                <button onclick="SaveNoteEdit()" type="button" class="btn btn-primary mb-1">Salvar</button>
            </div>
        </div>
    </div>
</div>