@using ProjectPortfolio.Enumerators
@{
    ViewData["Title"] = "Painel de atendimento";
}

<div class="d-flex justify-content-end mb-2">
    <button onclick="Edit()" type="button" class="btn btn-primary">Criar chamado</button>
</div>

<div class="row attendant ps-2 pe-2">
    <div class="col-3 shadow rounded" style="background-color: #FFFFFF !important;">
        <div class="head">Aberto</div>
        <hr class="mt-2 mb-2 hr-AttendancPanel" />
        <div id="wrapper-open" class="column">
            <input hidden class="cardStatus" value="@IssueStatusEnum.Opened" />
        </div>
    </div>
    <div class="col-3 shadow rounded" style="background-color: #FFFFFF !important;">
        <div class="head">Pendente</div>
        <hr class="mt-2 mb-2 hr-AttendancPanel" />
        <div id="wrapper-pendent" class="column">
            <input hidden class="cardStatus" value="@IssueStatusEnum.Pending" />
        </div>
    </div>
    <div class="col-3 shadow rounded" style="background-color: #FFFFFF !important;">
        <div class="head">Em progresso</div>
        <hr class="mt-2 mb-2 hr-AttendancPanel" />
        <div id="wrapper-inProgress" class="column">
            <input hidden class="cardStatus" value="@IssueStatusEnum.InProgress" />
        </div>
    </div>
    <div class="col-3 shadow rounded" style="background-color: #FFFFFF !important;">
        <div class="head">Fechado</div>
        <hr class="mt-2 mb-2 hr-AttendancPanel" />
        <div id="wrapper-close" class="column">
            <input hidden class="cardStatus" value="@IssueStatusEnum.Closed" />
        </div>
    </div>
</div>

<div id="wrapper-edit"></div>
<div id="wrapper-note"></div>
<div id="wrapper-alert"></div>

<script src="~/js/AttendancePanel/Index.js" asp-append-version="true"></script>