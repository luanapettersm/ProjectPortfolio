@model ClientProjectModel;

<div id="projectEditModal" class="modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Projeto</h5>
            </div>
            <div class="modal-body">
                <form id="projectFormId">
                    @if (Model != null)
                    {
                        <input id="projectId" name="project.id" value="@Model.Id" hidden />
                    }
                    <div class="row">
                        <div class="col-12">
                            <input class="form-control" id="projectId" name="project.title" placeholder="Título" value="@(Model != null ? Model.Title : "")">
                        </div>
                        <div class="col-12">
                            <input class="form-control" id="descriptionId" name="project.description" placeholder="Descrição" value="@(Model != null ? Model.Description : "")">
                        </div>
                        <div class="col-3">
                            <input class="form-control" id="zipCodeId" name="project.zipCode" placeholder="CEP" value="@(Model != null ? Model.ZipCode : "")">
                        </div>
                        <div class="col-5">
                            <input class="form-control" id="addressId" name="project.address" placeholder="Endereço" value="@(Model != null ? Model.Address : "")">
                        </div>
                        <div class="col-2">
                            <input class="form-control" id="numberId" name="project.number" placeholder="Número" value="@(Model != null ? Model.Number : "")">
                        </div>
                        <div class="col-2">
                            <input class="form-control" id="cityId" name="project.city" placeholder="Cidade" value="@(Model != null ? Model.City : "")">
                        </div>
                        <div class="col-12 d-flex justify-content-end">
                            <div class="form-check" style="margin-top: 8px;">
                                <input class="form-check-input" type="checkbox" value="true" name="project.isEnabled" id="isEnabledId" checked="@(Model == null ? true : Model.IsEnabled)">
                                <label class="form-check-label" for="isEnabledId">
                                    Ativo
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button onclick="CloseProjectEdit()" type="button" class="btn btn-primary">Fechar</button>
                <button onclick="SaveProjectEdit()" type="button" class="btn btn-primary mb-1">Salvar</button>
            </div>
        </div>
    </div>
</div>