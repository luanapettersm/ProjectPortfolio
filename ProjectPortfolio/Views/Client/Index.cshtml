@{
    ViewData["Title"] = "Cadastro de Cliente";
}

<div class="shadow p-3 bg-body rounded w-100" style="background-color: #FFFFFF !important">
    <form id="clientFormId">
        <input id="clientId" name="client.id" hidden/>
        <div class="row">
            <div class="col-3 d-flex justify-content-between">
                <div class="form-check" style="margin-top: 5px;">
                    <input class="form-check-input" type="radio" name="type" id="cpfId" onchange="ChangePeople(true)" checked>
                    <label class="form-check-label" for="cpfId">
                        Pessoa física
                    </label>
                </div>
                <div class="form-check" style="margin-top: 5px;">
                    <input class="form-check-input" type="radio" name="type" onchange="ChangePeople(false)" id="cnpjId">
                    <label class="form-check-label" for="cnpjId">
                        Pessoa juridica
                    </label>
                </div>
            </div>
            <div class="col-3">
                <input class="form-control" id="clientInfoId" placeholder="CPF/CNPJ">
            </div>
            <div class="col-3">
                <input class="form-control" id="nameId" name="client.name" placeholder="Nome">
            </div>
            <div class="col-3">
                <input class="form-control" id="surnameId" name="client.surname" placeholder="Sobrenome">
            </div>
            <div class="col-3">
                <input class="form-control" id="phoneNumberId" name="client.phoneNumber" placeholder="Telefone">
            </div>
            <div class="col-3">
                <input class="form-control" id="mailId" name="client.mail" placeholder="Email">
            </div>
            <div class="col-3">
                <input class="form-control" id="zipCodeId" name="client.zipCode" placeholder="CEP">
            </div>
            <div class="col-3">
                <input class="form-control" id="addressId" name="client.address" placeholder="Endereço">
            </div>
            <div class="col-3">
                <input class="form-control" id="cityId" name="client.city" placeholder="Cidade">
            </div>
            <div class="col-2">
                <input class="form-control" id="stateId" name="client.state" placeholder="Estado">
            </div>
            <div class="col-1">
                <div class="form-check" style="margin-top: 8px;">
                    <input class="form-check-input" type="checkbox" value="true" name="client.isEnabled" id="isEnabledId" checked>
                    <label class="form-check-label" for="isEnabledId">
                        Ativo
                    </label>
                </div>
            </div>
            <div class="col-6 d-flex justify-content-end">
                <button onclick="CleanEdit()" type="button" class="btn btn-primary me-2">Limpar</button>
                <button type="button" class="btn btn-primary">Salvar</button>
            </div>
        </div>
        
    </form>
</div>

<script src="~/js/Client/Index.js" asp-append-version="true"></script>